<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Events - Celestial Gatherings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Platypi:wght@400;600&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles-core.css">
    <link rel="stylesheet" href="/css/styles-events.css">
</head>
<body>
<a class="skip-link" href="#main">Skip to content</a>
<%- include('partials/header') %>
<%- include('partials/nav', { active: 'events' }) %>


<main id="main" class="container">
    <header class="page-head">
        <h1 class="page-title">Events</h1>
        <div class="divider"></div>
    </header>


    <% categories.forEach(category => { %>
        <section class="event-section" aria-labelledby="cat-<%= category %>">
            <h2 id="cat-<%= category %>" class="cat-title">
                <span class="chip"><%= he.decode(category) %></span>
            </h2>


            <div class="grid grid-3">
                <% events.filter(e => e.category === category).forEach(event => { %>
                    <article class="card event-card">
                        <a class="stretched" href="/events/<%= event._id %>">
                            <img class="card-img" src="<%= event.image %>" alt="<%= he.decode(event.title) %>" loading="lazy" width="640" height="360">
                            <div class="card-body">
                                <h3 class="card-title"><%= he.decode(event.title) %></h3>
                                <p class="meta"><i class="far fa-clock" aria-hidden="true"></i> <%= event.startDateTimeFormatted %></p>
                                <p class="meta"><i class="fas fa-map-marker-alt" aria-hidden="true"></i> <%= he.decode(event.location) %></p>
                                <span class="badge"><%= event.category %></span>
                            </div>
                        </a>
                    </article>
                <% }) %>
            </div>
        </section>
    <% }) %>
</main>


<%- include('partials/footer') %>
</body>
</html>
